<% title 'â€“ ' + t('.title') %>
<% if @lectures.any? %>
  <div class="container">
    <section class="info info--large text-center">
			<!-- <h1> <%= t('.title') %> </h1> -->
      <p class="lead"> <%= t('.lead') %> </p>
    </section>
		<!--<section class="info">-->
		<!--</section>-->

		<div class="col-sm-10 col-sm-offset-1">
			<% @lectures.each_with_index do |lecture, index| %>
				<div class="row">

					<% if index % 2 == 0 %>
						<div class="col-sm-4 hidden-xs">	
							<% if lecture.image_id? %>
								<%= image_tag lecture.image.url, alt: lecture.name, class: 'img-responsive' %>
							<% else %>
								<%= image_tag 'lectures/blank.png', class: 'img-responsive' %>
							<% end %>
						</div>
					<% end %>

					<div class="col-sm-8">
						<!--info-->
						<h3 class="<%= 'text-right' if index % 2 != 0 %>"> <%= link_to_if lecture.slug?, lecture.title, lecture_path(lecture.slug) %> </h3>
						<h4 class="<%= 'text-right' if index % 2 != 0 %>">
							<!--<span class="time">
								<%= l(lecture.start, format: '%H:%M') %> &mdash;
								<%= l(lecture.stop, format: '%H:%M') %>
								</span>-->
							<%= lecture.name if lecture.name? %>
						</h4>
						<p class="<%= 'text-right' if index % 2 != 0 %>">
							<%= truncate(strip_tags(GitHub::Markdown.render_gfm(lecture.description).html_safe),
								length: 300, separator: ' ') { link_to t('continue_read'), lecture_path(lecture.slug)} %>
						</p>
					</div>

					<% if index % 2 != 0 %>
						<div class="col-sm-4 hidden-xs">	
						<% if lecture.image_id? %>
							<%= image_tag lecture.image.url, alt: lecture.name, class: 'img-responsive' %>
						<% else %>
							<%= image_tag 'lectures/blank.png', class: 'img-responsive' %>
						<% end %>
						</div>
					<% end %>

				</div>
				<br>
			<% end %>
		</div>
	</div>
<% else %>
  <!-- no lectures -->
  <div class="info container text-center limit-width info--large">
    <h1>
      <%= t('.title') %>
    </h1>
    <p class="lead">
      <%= t('.not_yet') %>
    </p>
    <p>
      <%= t('.pub') %>
      <%= link_to t('.pub_link'), 'https://www.facebook.com/events/459047377579156/' %>
    </p>
  </div>
<% end %>
