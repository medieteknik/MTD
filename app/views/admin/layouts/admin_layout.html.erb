<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track' => true %>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

  <title><%= t('media_technology_days') %> Admin <%= yield(:title) %></title>

  <%= csrf_meta_tags %>

  <meta name="author" content="<%= t('media_technology_days') %>, Klas Eskilson">
  <link rel="icon" href="<%= image_url 'favicon.png' %>">

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <%= javascript_include_tag 'admin/application', 'data-turbolinks-track' => true %>

  <% if Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-47996085-2', 'auto');
      ga('require', 'displayfeatures');
    </script>
  <% end %>

  <script type="text/javascript">
    WEBSOCKET_URL = '<%= request.host_with_port + websocket_path %>';
  </script>
</head>
<body class="<%= controller.controller_name %> <%= yield(:body_class) %>">
<% if Rails.env.production? %>
<script>
  ga('send', 'pageview');
</script>
<% end %>

<%= render 'admin/layouts/sidebar' %>
<%= render 'admin/layouts/header' %>
<div class="pusher" id="content">
  <%= yield %>
</div> <!-- /#content -->

</body>
</html>
