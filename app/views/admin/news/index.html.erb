<%= render 'common' %>
<div class="container">
  <h2>
    All news
  </h2>
  <%= link_to_if can?(:create, News), semantic_icon('plus') + 'Create new', new_admin_news_path, class: 'ui green labeled icon button' %>

  <table class="ui unstackable table">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          Title
        </th>
        <th>
          Status
        </th>
        <th>
          Publishing date
        </th>
        <th>
          &nbsp;
        </th>
      </tr>
    </thead>
    <tbody>
      <% @news.each do |n| %>
        <tr>
          <td>
            <%= n.id %>
          </td>
          <td>
            <%= n.title %>
          </td>
          <td <%= 'class=positive' if n.published_at > DateTime.now and n.status = 'public' %>>
            <%= n.status %>
          </td>
          <td>
            <%= n.published_at %>
          </td>
          <td>
            <%= link_to_if can?(:update, n), semantic_icon('write') + "Edit", edit_admin_news_path(n) %>
            <%= link_to_if can?(:destroy, n), semantic_icon('trash') + "Trash", admin_news_path(n), data: {confirm: "Are you sure?"}, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
