<div class="container">
  <%= content_tag :h1, t('user.sessions.log_in') %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: t('email_placeholder') %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: t('helpers.label.user.password') %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="form-group actions">
      <%= f.submit t('user.sessions.log_in') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
