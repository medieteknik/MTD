<% # app/views/confirmations/show.html.erb %>
<h2><%= t('user.confirmations.activation') %></h2>

<%= form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'patch'}, :id => 'activation-form' do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <% if @requires_password %>
        <p><%= f.label :password, t('user.confirmations.choose') %> <%= f.password_field :password %></p>
        <p><%= f.label :password_confirmation, t('user.confirmations.confirm') %> <%= f.password_field :password_confirmation %></p>
    <% end %>
    <%= hidden_field_tag :confirmation_token, @confirmation_token %>
    <p><%= f.submit t('user.confirmations.activate') %></p>
  </fieldset>
<% end %>
