<!-- kinda messy -->
<div class="container">
  <section class="info row">
    <div class="col-sm-6">
      <%= content_tag :h1, t('.title') %>
      <%= content_tag :p, t('.lead'), class: 'lead' %>
      <%= content_tag :p, t('.count_begin') + Company.where(published: true).count.to_s + t('.count_end'), class: 'lead' %>
    </div>
    <div class="col-sm-6">
      <summary class="map tabpanel">
        <ul class="nav nav-tabs nav-justified" role="tablist">
          <li role="presentation" class="<%= 'active' unless Date.today === Date.new(2015, 3, 26) %>">
            <a href="#day_one" aria-controls="day_one" role="tab" data-toggle="tab"><%= t('.first_day') %></a>
          </li>
          <li role="presentation" class="<%= 'active' if Date.today === Date.new(2015, 3, 26) %>">
            <a href="#day_two" aria-controls="day_two" role="tab" data-toggle="tab"><%= t('.second_day') %></a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane <%= 'active' unless Date.today === Date.new(2015, 3, 26) %>" id="day_one">
            <% @day = "first"; %>
            <%= render 'public_map' %>
          </div>
          <div role="tabpanel" class="tab-pane <%= 'active' if Date.today === Date.new(2015, 3, 26) %>" id="day_two">
            <% @day = "second";  %>
            <%= render 'public_map' %>
          </div>
        </div>
      </summary>
    </div>
  </section>
</div>

<div class="ribbon">
  <div class="container">
    <div class="info text-center">
      <h2><%= t('.sponsor.gold') %></h2>
    </div>

    <section class="info">
      <div class="companies-row gold">
        <% @gold_companies.each do |company| %>
          <article class="company text-center">
            <%= link_to image_tag(company.image.url, alt: company.name), company_path(company.slug) if company.image %>
            <h3>
              <%= link_to company.name, company_path(company.slug) %>
            </h3>
            <p>
              <%= truncate(strip_tags(GitHub::Markdown.render_gfm(company.description).html_safe), length: 200, separator: ' ') { link_to t('continue_read'), company_path(company.slug)} %>
            </p>
          </article>
        <% end %>
      </div>
    </section>
  </div>
</div>

<div class="container">
  <% if @silver_companies.any? %>
    <h3 class="info text-center"><%= t('.sponsor.silver') %></h3>
    <section class="info">

      <div class="companies-row silver">
        <% @silver_companies.each_with_index do |company, index| %>
          <article class="company">
            <%= link_to company_path(company.slug) do %>
              <div class="wrap">
                <%= image_tag(company.image.url, alt: company.name) if company.image %>
              </div>
              <h4>
                <%= company.name %>
              </h4>
            <% end %>
            <p>
              <%= truncate(strip_tags(GitHub::Markdown.render_gfm(company.description).html_safe), length: 70, separator: ' ') { link_to t('continue_read'), company_path(company.slug)} %>
            </p>
          </article>
          <% if (index+1)%3 == 0 %>
            <!-- semi-ugly way to solve this, yes -->
            </div><div class="companies-row silver">
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

