            </p>
          </article>
          <% if (index+1)%4 == 0 %>
            <!-- semi-ugly way to solve this, yes -->
            </div><div class="companies-row bronze">
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <% if @fair_companies.any? %>
    <section class="info">
      <h3 class="text-center"><%= t('.sponsor.fair') %></h3>
      <div class="companies-row fair">
        <% @fair_companies.each_with_index do |company, index| %>
