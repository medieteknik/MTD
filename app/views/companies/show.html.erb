<% title 'â€“ ' + @company.name %>
<% description truncate(strip_tags(GitHub::Markdown.render_gfm(@company.description).html_safe), length: 100, separator: ' ') %>
<% social_image @company.image.url if @company.image %>
<div class="container">
  <% unless @company.published %>
    <div class="info alert alert-warning">
      <%= content_tag :strong, t('.not_published') %>
      <%= t('.reminder') %>
    </div>
  <% end %>
  <article class="show-company">
    <aside class="company-info">
      <%= image_tag @company.image.url, alt: @company.name, class: 'info' if @company.image %>
      <header class="info visible-xs-block">
        <%= content_tag :h1, @company.name %>
      </header>
      <summary class="info gray-box">
        <%= content_tag :p, sponsor(@company) %>
        <%= content_tag :p, attendance(@company) %>

        <%= content_tag :h5, t('.looking_for') if @company.looking_for.present? %>
        <%= content_tag :p, @company.looking_for %>

        <% if @company.links && @company.links.any? %>
          <%= content_tag :h5, t('.links') %>
          <ul class="list-unstyled">
            <% @company.links.each do |link| %>
              <%= content_tag(:li, link_to(link.title, link.url)) if link.title.present? %>
            <% end %>
          </ul>
        <% end %>
      </summary>
      <summary class="map tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <% if @company.first_day %>
            <li role="presentation" class="active">
              <a href="#day_one" aria-controls="day_one" role="tab" data-toggle="tab"><%= t('.first_day') %></a>
            </li>
          <% end %>
          <% if @company.second_day %>
            <li role="presentation" <%= @company.first_day ? '' : 'class="active"'%>>
              <a href="#day_two" aria-controls="day_two" role="tab" data-toggle="tab"><%= t('.second_day') %></a>
            </li>
          <% end %>
        </ul>
        <div class="tab-content">
          <% if @company.first_day %>
            <div role="tabpanel" class="tab-pane active" id="day_one">
              <% @day = "first"; %>
              <%= render 'single_map' %>
            </div>
          <% end %>
          <% if @company.second_day %>
            <div role="tabpanel" class="tab-pane <%= @company.first_day ? '' : 'active'%>" id="day_two">
              <% @day = "second";  %>
              <%= render 'single_map' %>
            </div>
          <% end %>
        </div>
      </summary>
    </aside>
    <div class="company-body">
      <header class="info hidden-xs">
        <%= content_tag :h1, @company.name %>
      </header>
      <main class="info">
        <%= GitHub::Markdown.render_gfm(@company.description).html_safe if @company.description.present? %>
      </main>
    </div>
  </article>
</div>
