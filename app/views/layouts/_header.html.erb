<header id="header" class="<%= yield :header_class %>">
  <div class="container header">
    <%= link_to(content_tag(:div, '', class: 'logo') + 'MTD<span class="year">2016</span>'.html_safe,
          home_path, class: 'big-brand') %>
		<div class="sponsor mittmedia"></div>
    <div class="sponsor gaia"></div>
		<div class="sponsor autodesk"></div>
  </div>

  <nav id="main-nav">
    <div class="container">
      
			<ul class="menu right">
        <%= content_tag(:li, link_to(image_tag('flags/' + i18n_opposite + '.png'),
          url_for(locale: i18n_opposite), title: t('change_lang_opposite')), class: 'lang') %>
        <%= content_tag :li, link_to(icon('facebook-square', '', class: 'fa-lg'), 'https://facebook.com/medieteknikdagarna', target: 'blank') %>
        <%= content_tag :li, link_to(icon('twitter-square', '', class: 'fa-lg'), 'https://twitter.com/mtdagarna', target: 'blank') %>
        <%= content_tag :li, link_to(icon('youtube-square', '', class: 'fa-lg'), 'https://youtube.com/mtdagarna', target: 'blank') %>
        <%= content_tag :li, link_to(icon('instagram', '', class: 'fa-lg'), 'https://www.instagram.com/medieteknikdagarna/', target: 'blank') %>
      </ul>

			<%= link_to(content_tag(:div, '', class: 'logo') + content_tag(:span, t('short_name'), class: 'name') + ' ' + content_tag(:span, t('the_date'), class: 'visible-xs-inline'),
        home_path, class: 'brand') %>

      <ul class="menu left">
        <%= content_tag :li, active_link_to(t('.about'), about_path, :active => :exclusive) %>
        <%= content_tag :li, active_link_to(t('.contact'), about_contact_path) %>
        <%= content_tag :li, active_link_to(t('.companies'), companies_path) if Company.where(published: true).any? %>

				<!--<%= content_tag :li, active_link_to(t('.previous'), about_previous_path) %> -->
				<!--<%= content_tag :li, active_link_to(t('.sponsor'), sponsorship_path) %> -->
        <% if Date.today >= Date.parse(ENV["OPEN_HOST_APPLICATIONS"]) and Date.today <= Date.parse(ENV["CLOSE_HOST_APPLICATIONS"]) %>
					<%= content_tag :li, active_link_to(t('.host'), host_path) %>
				<% end %>
				<% if Date.today >= Date.parse(ENV["OPEN_EXPO_APPLICATIONS"]) %>
					<%= content_tag :li, active_link_to(t('.studentexpo'), studentexpos_path) %>
				<% end %>
				<%= content_tag :li, active_link_to(t('.lectures'), lectures_path) %> 
        <%= content_tag :li, active_link_to(t('.photos'), photos_path) %>
				<!--<%= content_tag :li, active_link_to(t('.banquet'), banquet_path) %> -->
      </ul>

      
      <%= icon 'bars', '', class: 'fa-2x pull-right visible-xs-inline togglemenu' %>
    </div>
  </nav>
</header>
