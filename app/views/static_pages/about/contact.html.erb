    <div class="row">
      <div class="col-sm-8">
        <%= render 'static_pages/about/press_info' %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h4, t('.pressinfo.contact') %>
        <p>
          Mattias Palmgren, <%= t('static_pages.about.about.group.pr') %> MTD 2015 <br>
          <%= link_to(icon('paper-plane') + ' mattias@medieteknikdagarna.se', 'mailto:mattias@medieteknikdagarna.se') %> <br>
