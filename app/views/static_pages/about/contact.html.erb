<div class="container">
  <section class="info limit-width">
    <%= content_tag :h1, t('.title') %>
    <%= content_tag :p, t('.lead'), class: 'lead' %>
  </section>
  <section class="info">
    <section class="row">
      <div class="col-sm-4">
        <%= content_tag :h3, t('.general.title') %>
        <%= content_tag :p, t('.general.text') %>
        <%= content_tag :p, link_to(t('.general.email'), 'mailto:' + t('.general.email')) %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h3, t('.business.title') %>
        <%= content_tag :p, t('.business.text') %>
        <%= content_tag :p, link_to(t('.business.email'), 'mailto:' + t('.business.email')) %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h3, t('.press.title') %>
        <%= content_tag :p, t('.press.text') %>
        <%= content_tag :p, link_to(t('.press.email'), 'mailto:' + t('.press.email')) %>
      </div>
    </section>
    <section class="row">
      <div class="col-sm-4">
        <%= content_tag :h3, t('.webb.title') %>
        <%= content_tag :p, t('.webb.text') %>
        <%= content_tag :p, link_to(t('.webb.email'), 'mailto:' + t('.webb.email')) %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h3, t('.fair.title') %>
