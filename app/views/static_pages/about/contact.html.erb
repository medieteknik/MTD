    <div class="row">
      <div class="col-sm-8">
        <%= render 'static_pages/about/press_info' %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h4, t('contact_pressinfo_contact') %>
        <p>
          Mattias Palmgren, <%= t('about_group_title_pr') %> MTD 2015 <br>
          <%= link_to(icon('paper-plane') + ' mattias@medieteknikdagarna.se', 'mailto:mattias@medieteknikdagarna.se') %> <br>
          <%= link_to(icon('phone') + ' +4670-725 78 09', 'tel:+46707257809') %>
