        </div>
        <%= content_tag :h3, t('.physical.visit') %>
        <%= content_tag :p, t('.physical.visit_text') %>
        <address>
          Kåkenhus, Campus Norrköping <br>
          Kungsgatan 40 <br>
          602 20 Norrköping
        </address>
      </div>
      <div class="col-sm-4">
        <div class="embed-responsive embed-responsive-4by3">
          <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed/v1/place?q=K%C3%A5rhuset%20Trappan%2C%20V%C3%A4stg%C3%B6tegatan%2C%20Norrk%C3%B6ping%2C%20Sweden&key=AIzaSyC3M7Wg3cPOcXdyXaignOy-68PUDyWBCRQ"></iframe>
