<div class="container">
  <section class="info limit-width">
    <%= content_tag :h1, t('contact_title') %>
    <%= content_tag :p, t('contact_lead'), class: 'lead' %>
  </section>
  <section class="info">
    <section class="row">
      <div class="col-sm-4">
        <%= content_tag :h3, t('contact_general_title') %>
        <%= content_tag :p, t('contact_general_text') %>
        <%= content_tag :p, link_to(t('contact_general_email'), 'mailto:'+t('contact_general_email')) %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h3, t('contact_business_title') %>
        <%= content_tag :p, t('contact_business_text') %>
        <%= content_tag :p, link_to(t('contact_business_email'), 'mailto:'+t('contact_business_email')) %>
      </div>
      <div class="col-sm-4">
        <%= content_tag :h3, t('contact_press_title') %>
        <%= content_tag :p, t('contact_press_text') %>
        <%= content_tag :p, link_to(t('contact_press_email'), 'mailto:'+t('contact_press_email')) %>
      </div>
    </section>
    <section class="row">
      <div class="col-sm-4">
        <%= content_tag :h3, t('contact_webb_title') %>
