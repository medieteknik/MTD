<% body_class 'home header-scroll' %>
<% title '– ' + t('the_date') + ', Norrköping' %>
<div class="beamer">
  <div class="content header-scroll-target">
    <%= content_tag :h2, t('media_technology_days') + ' 2015' %>
    <%= content_tag :h1, t('the_date'), class: 'date' %>
    <%= content_tag :h2, 'Campus Norrköping' %>
  </div>
  <footer>
    <ul>
      <%= content_tag :li, t('follow_us') + ':' %>
      <%= content_tag :li, link_to(icon('facebook', '', class: 'fa-lg') + ' Facebook', 'https://facebook.com/medieteknikdagarna') %>
      <%= content_tag :li, link_to(icon('twitter', '', class: 'fa-lg') + ' Twitter', 'https://twitter.com/mtdagarna') %>
      <%= content_tag :li, link_to(icon('youtube', '', class: 'fa-lg') + ' YouTube', 'https://youtube.com/mtdagarna') %>
    </ul>
  </footer>
</div>

<div class="container limit-width narrow center">
  <div class="info">
    <%= content_tag :h3, t('.welcome') + '!' %>
    <%= content_tag :p, t('.lead'), class: 'lead' %>
  </div>
</div>

<section class="ribbon">
  <div class="container">
    <div class="info text-center">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-1 col-md-3 col-md-offset-2">
          <%= icon 'comments', '', class: 'fa-7x' %>
          <%= content_tag :h4, t('.contacts.title') %>
          <%= content_tag :p, t('.contacts.text') %>
        </div>
        <div class="col-sm-4 col-sm-offset-2 col-md-3 col-md-offset-2">
          <%= icon 'lightbulb-o', '', class: 'fa-7x' %>
          <%= content_tag :h4, t('.inspiration.title') %>
          <%= content_tag :p, t('.inspiration.text') %>
        </div>
      </div>
    </div>
  </div>
</section>
