<% body_class 'home header-scroll' %>
<% title '– ' + t('the_date') + ', Norrköping' %>
<% header_class 'transparent' %>
<div class="beamer">
  <div class="content header-scroll-target">
    <%= content_tag :h2, t('media_technology_days') + ' 2016' %>
    <%= content_tag :h1, t('the_date') %>
    <%= content_tag :h2, 'Färgeriet, Kåkenhus' %>
  </div>
  <footer>
    <ul>
      <%= content_tag :li, t('follow_us') + ':' %>
      <%= content_tag :li, link_to(icon('facebook', '', class: 'fa-lg') + ' Facebook', 'https://facebook.com/medieteknikdagarna') %>
      <%= content_tag :li, link_to(icon('twitter', '', class: 'fa-lg') + ' Twitter', 'https://twitter.com/mtdagarna') %>
      <%= content_tag :li, link_to(icon('youtube', '', class: 'fa-lg') + ' YouTube', 'https://youtube.com/mtdagarna') %>
      <%= content_tag :li, link_to(icon('instagram', '', class: 'fa-lg') + ' Instagram', 'https://www.instagram.com/medieteknikdagarna/') %>
    </ul>
  </footer>
</div>
<div class="container">
  <div class="info info--large">
    <div class="row">
      <div class="col-sm-7">
				<%= content_tag :h2, t('.welcome') + '!' %>
				<%= content_tag :p, t('.lead') %>
				<br>

				<div class="sponsors">
					<h2><%= t('.main_sponsors') %></h4>
					<% @gold_sponsors.each do |company| %>
						<article class="large-company">
							<h3> <%= link_to company.name, company_path(company.slug) %> </h3>
							<p> <%= truncate(strip_tags(GitHub::Markdown.render_gfm(company.description).html_safe), length: 200, separator: ' ') { link_to t('continue_read'), company_path(company.slug)} %> </p>
						</article>
					<% end %>
				</div>
      </div>
			<div class="col-sm-5">
				<% @news.each do |n| %>
					<%= content_tag :h3, link_to(n.title, n) %>
					<p>
						<%= l(n.published_at, format: '%e %B, %Y') %> <%= t('by') %> <%= n.users.to_a.map(&:name).join(', ') %>.
						<%= link_to_if(can?(:update, n), t('edit').titleize, edit_news_path(n)){} %>
					</p>
					<p> <%= truncate(strip_tags(GitHub::Markdown.render_gfm(n.content).to_s.html_safe), length: 150, separator: ' ') { link_to t('continue_read'), n } %> </p>
				<% end %>
			</div>

    </div>
  </div>
</div>

<div class="ribbon">
	<div class="container">
		<div class="info">
			<div class="row">
				<div class="sponsors silver-sponsors-container text-center">
					<h3 class="text-center"><%= t('.sponsors') %></h4>
					<!-- hard coded for 5 entries -->
					<div class="col-sm-1"></div> <!--push-->
					<% @silver_sponsors.each do |company| %>
						<div class="col-sm-2">
							<article class="silver-sponsor">
								<%= link_to company_path(company.slug) do %>
									<%= image_tag(company.image.url, alt: company.name, class: 'img-responsive') if company.image %>
									<%= image_tag("previous/lectures/mihai.jpg", alt: company.name, class: 'img-responsive') if !company.image %>
								<% end %>
							</article>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="info text-center">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1 col-md-3 col-md-offset-2">
				<%= icon 'comments', '', class: 'fa-7x' %>
				<%= content_tag :h4, t('.contacts.title') %>
				<%= content_tag :p, t('.contacts.text') %>
			</div>
			<div class="col-sm-4 col-sm-offset-2 col-md-3 col-md-offset-2">
				<%= icon 'lightbulb-o', '', class: 'fa-7x' %>
				<%= content_tag :h4, t('.inspiration.title') %>
				<%= content_tag :p, t('.inspiration.text') %>
			</div>
		</div>
	</div>
</div>
